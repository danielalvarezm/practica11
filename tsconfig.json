{
    "exclude": [
      "./tests",
      "./node_modules",
      "./dist"
    ],
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "strictPropertyInitialization": true
    }
}
